{
    "name": "Time Extension",
    "version": "0.1",
    "description": "Register your project time in M3 in a simpler way",
    "options_page": "options.html",
    "permissions": [
        "storage",
        "activeTab",
        "tabs"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "18": "images/18.png",
            "24": "images/24.png",
            "36": "images/36.png",
            "48": "images/48.png",
            "72": "images/72.png",
            "96": "images/96.png"
        }
    },
    "icons": {
        "18": "images/18.png",
        "24": "images/24.png",
        "36": "images/36.png",
        "48": "images/48.png",
        "72": "images/72.png",
        "96": "images/96.png"
    },
    "manifest_version": 2
}
